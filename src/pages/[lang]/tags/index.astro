---
import { getCollection } from "astro:content";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Tag from "@/components/Tag.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import getUniqueTags from "@/utils/getUniqueTags";
import { SITE } from "@/config";
import { useTranslations, getLangFromUrl } from "@/i18n/ui";

export function getStaticPaths() {
  return [
    { params: { lang: "en" } },
  ];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const posts = await getCollection("blog");
const langPosts = posts.filter(({ id }) => id.startsWith(`${lang}/`));

let tags = getUniqueTags(langPosts);
---

<Layout title={`${t("page.tags")} | ${SITE.title}`}>
  <Header lang={lang} />
  <Main pageTitle={t("page.tags")} pageDesc={t("page.tagsDesc")} lang={lang}>
    <ul class="flex flex-wrap gap-6">
      {tags.map(({ tag, tagName }) => <Tag {tag} {tagName} lang={lang} />)}
    </ul>
  </Main>
  <Footer lang={lang} />
</Layout>

