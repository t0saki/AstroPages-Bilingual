---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Layout from "@/layouts/Layout.astro";
import { SITE } from "@/config";
import type { Lang } from "@/i18n/ui";

export function getStaticPaths() {
  return [
    { params: { lang: "zh" } },
    { params: { lang: "en" } },
  ];
}

const { lang } = Astro.params as { lang: Lang };

// 这里只保留了标题，其他内容已删除
const content = {
  zh: {
    title: "关于",
  },
  en: {
    title: "About",
  },
};

const c = content[lang as keyof typeof content];
---

<Layout title={`${c.title} | ${SITE.title}`}>
  <Header lang={lang} />
  <Breadcrumb lang={lang} />
  <main id="main-content" class="app-layout">
    <section id="about" class="app-prose mb-28 max-w-app prose-img:border-0">
      <h1 class="text-2xl tracking-wider sm:text-3xl">{c.title}</h1>
      
      <!-- 这里是空白的，你以后想写内容可以写在这里 -->
      <p>内容建设中...</p>

    </section>
  </main>
  <Footer lang={lang} />
</Layout>
